{
  "author": {
    "name": "Teck",
    "email": "github-actions[bot]@users.noreply.github.com"
  },
  "baseBranch": "main",
  "prereleaseBranches": ["next", "alpha", "beta"],
  "noVersionPrefix": false,
  "plugins": [
    ["git-tag", { "tagPrefix": "catalog@" }],
    "conventional-commits",
    "first-time-contributor",
    "released"
  ],
  "labels": [
    {
      "name": "major",
      "changelogTitle": "üí• Breaking Changes",
      "description": "Increment the major version when merged",
      "releaseType": "major",
      "color": "#C5000B"
    },
    {
      "name": "minor",
      "changelogTitle": "‚ú® Features",
      "description": "Increment the minor version when merged",
      "releaseType": "minor",
      "color": "#F1A60E"
    },
    {
      "name": "patch",
      "changelogTitle": "üêõ Bug Fixes",
      "description": "Increment the patch version when merged",
      "releaseType": "patch",
      "color": "#870048"
    },
    {
      "name": "skip-release",
      "description": "Preserve the current version when merged",
      "releaseType": "skip",
      "color": "#bf5416"
    },
    {
      "name": "release",
      "description": "Create a release when this PR is merged",
      "releaseType": "release",
      "color": "#007f70"
    },
    {
      "name": "internal",
      "changelogTitle": "üè† Internal",
      "description": "Changes only affect the internal API",
      "releaseType": "none",
      "color": "#696969"
    },
    {
      "name": "documentation",
      "changelogTitle": "üìö Documentation",
      "description": "Changes only affect the documentation",
      "releaseType": "none",
      "color": "#cfd3d7"
    },
    {
      "name": "tests",
      "changelogTitle": "‚úÖ Tests",
      "description": "Add or improve existing tests",
      "releaseType": "none",
      "color": "#ffd3cc"
    },
    {
      "name": "dependencies",
      "changelogTitle": "üì¶ Dependencies",
      "description": "Update one or more dependencies version",
      "releaseType": "none",
      "color": "#8732bc"
    },
    {
      "name": "performance",
      "changelogTitle": "‚ö° Performance",
      "description": "Improve performance of an existing feature",
      "releaseType": "patch",
      "color": "#f4b2d8"
    },
    {
      "name": "refactor",
      "changelogTitle": "‚ôªÔ∏è Refactoring",
      "description": "Code refactoring without functionality changes",
      "releaseType": "patch",
      "color": "#1d76db"
    },
    {
      "name": "chore",
      "changelogTitle": "üîß Chores",
      "description": "Maintenance and chores",
      "releaseType": "none",
      "color": "#fef2c0"
    }
  ]
}
