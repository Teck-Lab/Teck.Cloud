{
  "branches": [
    "+([0-9])?(.{+([0-9]),x}).x",
    "main",
    {
      "name": "next",
      "prerelease": true,
      "channel": "next"
    },
    "next-major",
    {
      "name": "beta",
      "prerelease": true,
      "channel": "beta"
    },
    {
      "name": "alpha",
      "prerelease": true,
      "channel": "alpha"
    }
  ],
  "tagFormat": "catalog@v${version}",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "feat", "scope": "catalog", "release": "minor" },
          { "type": "fix", "scope": "catalog", "release": "patch" },
          { "type": "perf", "scope": "catalog", "release": "patch" },
          { "type": "refactor", "scope": "catalog", "release": "patch" },
          { "type": "build", "scope": "catalog", "release": "patch" },
          { "breaking": true, "scope": "catalog", "release": "major" },
          { "scope": "catalog", "release": false }
        ],
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES"]
        }
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "‚ú® Features" },
            { "type": "fix", "section": "üêõ Bug Fixes" },
            { "type": "perf", "section": "‚ö° Performance Improvements" },
            { "type": "refactor", "section": "‚ôªÔ∏è Code Refactoring" },
            { "type": "docs", "section": "üìö Documentation", "hidden": false },
            { "type": "test", "section": "‚úÖ Tests", "hidden": false },
            { "type": "build", "section": "üèóÔ∏è Build System", "hidden": false },
            { "type": "ci", "section": "üë∑ CI/CD", "hidden": false },
            { "type": "chore", "section": "üîß Chores", "hidden": false },
            { "type": "style", "section": "üíÑ Styles", "hidden": true }
          ]
        }
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "echo \"Preparing release ${nextRelease.version} for catalog service\""
      }
    ],
    [
      "@semantic-release/github",
      {
        "successComment": false,
        "failTitle": false,
        "releasedLabels": ["released<%= nextRelease.channel ? `-${nextRelease.channel}` : \"\" %>"]
      }
    ]
  ]
}
