  </ItemGroup>

  <ItemGroup>
    <Folder Include="Endpoints\V1\Products\" />
  </ItemGroup>

  <ItemGroup>
    <None Include="Dockerfile">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </None>
  </ItemGroup>

<ItemGroup>
    <InternalsVisibleTo Include="Catalog.UnitTests" />
